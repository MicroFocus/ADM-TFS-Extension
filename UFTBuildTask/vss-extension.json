{
  "manifestVersion": 1,
  "id": "UFT-Azure-extension",
  "name": "UFT Azure DevOps extension",
  "version": "1.0.5",
  "publisher": "anda-laakso",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services",
      "version": "[15.0,)"
    }
  ],
  "description": "Enables you to run UFT tests as a build in an Azure DevOps build process. This extension includes 5 tasks.",
  "categories": [
    "Azure Pipelines"
  ],
  "resources": [
    "some stuff"
  ],
  "tags": [
    "UFT",
    "ALM"
  ],
  "icons": {
    "default": "img/tfs.png"
  },
  "screenshots ": [
    {
      "path": "resources/screenshots/AlmExecution.PNG"
    },
    {
      "path": "resources/screenshots/screen2.png"
    }
  ],
  "links": {
    "home": {
      "uri": "https://github.com/hpsa/ADM-TFS-Extension"
    },
    "installation": {
      "uri": "https://github.com/hpsa/ADM-TFS-Extension/wiki/Installing-the-Unified-Functional-Testing-TFS-Extension"
    },
    "learn": {
      "uri": "https://github.com/hpsa/ADM-TFS-Extension/wiki/Unified-Functional-Testing-(UFT)-TFS-Extension"
    }
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "overview": {
      "path": "overview.md"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "branding": {
    "color": "rgb(1, 66, 114)",
    "theme": "dark"
  },
  "files": [
    {
      "path": "AlmLabEnvPrepareTask"
    },
    {
      "path": "AlmLabManagementTask"
    },
    {
      "path": "RunFromALMTask"
    },
    {
      "path": "RunFromFileSystemTask"
    }
  ],
  "scopes": [
    "vso.test",
    "vso.build_execute",
    "vso.serviceendpoint"
  ],
  
  "contributions": [
       {
      "id": "custom-build-task-1",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "AlmLabEnvPrepareTask"
      }
    },
    {
      "id": "custom-build-task-2",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "AlmLabManagementTask"
      }
    },
    {
      "id": "custom-build-task-3",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "RunFromALMTask"
      }
    },
    {
      "id": "custom-build-task-4",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "RunFromFileSystemTask"
      }
    }
  ],
  "galleryFlags": [
    "Private"
  ]
}
